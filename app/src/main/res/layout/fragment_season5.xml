<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Season5Fragment">

    <!-- TODO: Update blank fragment layout -->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/gridEpisodesS5">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginTop="110dp" >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Play"
                    android:id="@+id/button6001"
                    android:layout_alignBottom="@+id/imageButton1"
                    android:layout_alignRight="@+id/imageButton1"
                    android:layout_alignEnd="@+id/imageButton1"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="20dp"
                    android:nestedScrollingEnabled="true"
                    android:onClick="buttonClicked"
                    android:tag="Season-5-Episode-1" />

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton1"
                    android:src="@drawable/buttonbackground"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:visibility="visible"
                    android:onClick="showMediaDataS5"
                    android:tag="Season-5-Episode-1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Episode 1"
                    android:id="@+id/textView1"
                    android:layout_marginLeft="81dp"
                    android:layout_marginStart="81dp"
                    android:layout_alignTop="@+id/imageButton1"
                    android:layout_alignLeft="@+id/imageButton1"
                    android:layout_alignStart="@+id/imageButton1"
                    android:layout_marginTop="24dp"
                    android:textColor="#000000" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView1"
                    android:layout_alignTop="@+id/button6001"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/s5cover"
                    android:layout_alignBottom="@+id/button6001"
                    android:layout_toStartOf="@+id/button6001"
                    android:layout_alignRight="@+id/textView1"
                    android:layout_alignEnd="@+id/textView1"
                    android:layout_marginRight="50dp"
                     />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginTop="1dp" >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Play"
                    android:id="@+id/button16"
                    android:layout_alignBottom="@+id/imageButton9"
                    android:layout_alignRight="@+id/imageButton9"
                    android:layout_alignEnd="@+id/imageButton9"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="20dp"
                    android:nestedScrollingEnabled="true"
                    android:onClick="buttonClicked"
                    android:tag="Season-5-Episode-2" />

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton9"
                    android:src="@drawable/buttonbackground"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:visibility="visible"
                    android:onClick="showMediaDataS5"
                    android:tag="Season-5-Episode-2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Episode 2"
                    android:id="@+id/textView9"
                    android:layout_marginLeft="81dp"
                    android:layout_marginStart="81dp"
                    android:layout_alignTop="@+id/imageButton9"
                    android:layout_alignLeft="@+id/imageButton9"
                    android:layout_alignStart="@+id/imageButton9"
                    android:layout_marginTop="24dp"
                    android:textColor="#000000" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView16"
                    android:layout_alignTop="@+id/button16"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/s5cover"
                    android:layout_alignBottom="@+id/button16"
                    android:layout_toStartOf="@+id/button16"
                    android:layout_alignRight="@+id/textView9"
                    android:layout_alignEnd="@+id/textView9"
                    android:layout_marginRight="50dp"
                     />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_marginTop="1dp" >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Play"
                    android:id="@+id/button17"
                    android:layout_alignBottom="@+id/imageButton16"
                    android:layout_alignRight="@+id/imageButton16"
                    android:layout_alignEnd="@+id/imageButton16"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="20dp"
                    android:nestedScrollingEnabled="true"
                    android:onClick="buttonClicked"
                    android:tag="Season-5-Episode-34" />

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton16"
                    android:src="@drawable/buttonbackground"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:visibility="visible"
                    android:onClick="showMediaDataS5"
                    android:tag="Season-5-Episode-34"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Episode 3+4"
                    android:id="@+id/textView16"
                    android:layout_marginLeft="81dp"
                    android:layout_marginStart="81dp"
                    android:layout_alignTop="@+id/imageButton16"
                    android:layout_alignLeft="@+id/imageButton16"
                    android:layout_alignStart="@+id/imageButton16"
                    android:layout_marginTop="24dp"
                    android:textColor="#000000" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView17"
                    android:layout_alignTop="@+id/button17"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/s5cover"
                    android:layout_alignBottom="@+id/button17"
                    android:layout_toStartOf="@+id/button17"
                    android:layout_alignRight="@+id/textView16"
                    android:layout_alignEnd="@+id/textView16"
                    android:layout_marginRight="50dp"
                    android:paddingRight="15dp" />
            </RelativeLayout>


        </GridLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/relDescriptionLayoutS5"
            android:visibility="invisible"
            android:layout_marginTop="120dp" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/relSubDescriptionLayout"
                android:visibility="visible" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:id="@+id/imgDescBack"
                android:src="@drawable/bgsmall"
                android:scaleType="fitXY"
                android:visibility="visible" />

            <GridLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:useDefaultMargins="false"
                android:visibility="visible"
                android:paddingTop="30dp"
                android:id="@+id/gridDesc" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView14"
                    android:src="@drawable/s5cover"
                    android:paddingLeft="0dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The Ricky Gervais Show"
                    android:id="@+id/textView14"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_gravity="center"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Season # Episode #"
                    android:id="@+id/txtTitleS5"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_gravity="center"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date: 12/12/2001"
                    android:id="@+id/txtDateS5"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:layout_gravity="center"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" desc  desc  desc  desc  desc  desc  desc  desc  desc  desc  desc  desc  desc  desc  desc  desc  desc "
                    android:id="@+id/txtDescS5"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="80dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_row="6"
                    android:layout_column="0">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Close"
                        android:id="@+id/button14"
                        android:layout_row="5"
                        android:layout_column="0"
                        android:onClick="closeDescS5"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="72dp"
                        android:layout_marginEnd="72dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete"
                        android:id="@+id/btnDelete"
                        android:layout_alignParentTop="true"
                        android:layout_toLeftOf="@+id/button14"
                        android:layout_toStartOf="@+id/button14"
                        android:layout_marginRight="32dp"
                        android:layout_marginEnd="32dp"
                        android:onClick="deleteEpisode"/>
                </RelativeLayout>
            </GridLayout>

            <WebView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/webView5"
                android:layout_below="@+id/gridDesc"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="15dp"/>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>
